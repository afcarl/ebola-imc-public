            android:id="@+id/tempTextView"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/tempEditText"/>

    </LinearLayout>

</ScrollView>

</RelativeLayout>