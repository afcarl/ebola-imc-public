<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="org.broadinstitute.ebolarisk.TreatFragment">

   <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nausea and Vomiting"
            android:id="@+id/textViewTitle"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nausea and vomiting can be managed with Ondansetron:"
            android:id="@+id/textView24"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="0, 1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Patient age"
            android:id="@+id/textView25"
            android:background="@color/table_title_background"
            android:textColor="@color/foreground_material_dark"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Daily dose"
            android:id="@+id/textView26"
            android:background="@color/table_title_background"
            android:textColor="@color/foreground_material_dark"></TextView>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="4–12 years"
            android:id="@+id/textView27"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="4 mg two times a day"
            android:id="@+id/textView28"></TextView>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Adult"
            android:id="@+id/textView29"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="8 mg two times a day"
            android:id="@+id/textView30"></TextView>

        </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dehydration"
            android:id="@+id/textView0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Patient is also at risk of dehydration, specially if also presenting diarrhea. Dehydration is the most frequent and important cause of further deterioration. The WHO Oral Rehydration Solution (ORS) is best suited for treating dehydration."
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ORS amount to give in first 4 hours"
            android:id="@+id/textView"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="0, 1, 2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Patient\nage"
            android:id="@+id/textView1"
            android:background="@color/table_title_background"
            android:textColor="@color/foreground_material_dark"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="ORS amount\n"
            android:id="@+id/textView2"
            android:background="@color/table_title_background"
            android:textColor="@color/material_grey_50"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Patient\nweight"
            android:id="@+id/textView3"
            android:background="@color/table_title_background"
            android:textColor="@color/material_grey_50"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Less than\n4 months"
            android:id="@+id/textView4"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="200–400 ml"
            android:id="@+id/textView5"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Less than\n5 kg"
            android:id="@+id/textView6"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="4-11\nmonths"
            android:id="@+id/textView7"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="400–600 ml"
            android:id="@+id/textView8"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="5-7.9\nkg"
            android:id="@+id/textView9"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="12-23\nmonths"
            android:id="@+id/textView10"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="600–800 ml"
            android:id="@+id/textView11"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="8-10.9\nkg"
            android:id="@+id/textView12"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2-4\nyears"
            android:id="@+id/textView13"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="800–1200 ml"
            android:id="@+id/textView14"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="11-15.9\nkg"
            android:id="@+id/textView15"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="5-15\nyears"
            android:id="@+id/textView16"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="1200–2200 ml"
            android:id="@+id/textView17"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="16-29.9\nkg"
            android:id="@+id/textView18"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="15 years\nor older"
            android:id="@+id/textView19"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2200–2400 ml"
            android:id="@+id/textView20"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="30 kg\nor more"
            android:id="@+id/textView21"
            android:background="@color/table_column_background"
            android:textColor="@color/material_grey_100"></TextView>
        </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reassess the patient’s condition after four hours, and provide more ORS as detailed above if dehydration persists."
            android:id="@+id/textView22"/>

    </LinearLayout>
  </ScrollView>
</RelativeLayout>
