<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="org.broadinstitute.ebolarisk.TreatFragment">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Diarrhea and dehydration"
            android:id="@+id/textView0"
            android:paddingBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Patient is at risk of dehydration, the most frequent and important cause of further deterioration. The WHO Oral Rehydration Solution (ORS) is best suited for treating dehydration."
            android:paddingBottom="20dp"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="ORS amount to given in first 4 hours"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="0, 1, 2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Patient\nage"
            android:id="@+id/textView1"
            android:textColor="@color/white"
            android:background="@color/table_title_background"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="ORS amount\n"
            android:id="@+id/textView2"
            android:background="@color/table_title_background"
            android:textColor="@color/white"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Patient\nweight"
            android:id="@+id/textView3"
            android:background="@color/table_title_background"
            android:textColor="@color/white"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/ors_rowLess4Months_Less5Kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Less than\n4 months"
            android:id="@+id/textView4"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="200–400 ml\n"
            android:id="@+id/textView5"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Less than\n5 kg"
            android:id="@+id/textView6"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/ors_row4To11Months_5To7_9Kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="4-11\nmonths"
            android:id="@+id/textView7"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="400–600 ml\n"
            android:id="@+id/textView8"
            android:autoText="false"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="5-7.9\nkg"
            android:id="@+id/textView9"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/ors_row12To23Months_8To10_9Kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="12-23\nmonths"
            android:id="@+id/textView10"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="600–800 ml\n"
            android:id="@+id/textView11"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="8-10.9\nkg"
            android:id="@+id/textView12"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/ors_row2To4Years_11To15_9Kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2-4\nyears"
            android:id="@+id/textView13"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="800–1200 ml\n"
            android:id="@+id/textView14"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="11-15.9\nkg"
            android:id="@+id/textView15"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/ors_row5To15Years_16To29_9Kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="5-15\nyears"
            android:id="@+id/textView16"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="1200–2200 ml\n"
            android:id="@+id/textView17"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="16-29.9\nkg"
            android:id="@+id/textView18"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>
        </TableRow>


        <TableRow
            android:id="@+id/ors_rowOver15Years_Over30Kg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="15 years\nor older"
            android:id="@+id/textView19"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2200–2400 ml\n"
            android:id="@+id/textView20"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="30 kg\nor more"
            android:id="@+id/textView21"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>
        </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="◘ Reassess the patient’s condition after four hours, and provide more ORS as detailed above if dehydration persists."
            android:id="@+id/textView22a"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="◘ If a patient (child or adult) has no diarrhoea or dehydration, and finds it difficult to drink ORS, use flavoured ORS."
            android:id="@+id/textView22b"
            android:paddingTop="5dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:text="◘ Do not use sports drinks, or sugary drinks such as fruit flavoured and fizzy commercial drinks, as they can worsen diarrhoea."
             android:id="@+id/textView22c"
             android:paddingTop="5dp"
             android:paddingBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Zinc treatment"
            android:id="@+id/textView23"
            android:paddingBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Give the patient Zinc sulphate, especially children:"
            android:id="@+id/textView24"
            android:paddingBottom="5dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="0, 1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Patient age"
            android:id="@+id/textView25"
            android:background="@color/table_title_background"
            android:textColor="@color/white"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Zinc dose"
            android:id="@+id/textView26"
            android:background="@color/table_title_background"
            android:textColor="@color/white"></TextView>

        </TableRow>


        <TableRow
            android:id="@+id/zinc_under6Months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Under 6 months"
            android:id="@+id/textView27"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="10 mg per day for 10–14 days"
            android:id="@+id/textView28"></TextView>

        </TableRow>


        <TableRow
            android:id="@+id/zinc_over6Months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Over 6 months"
            android:id="@+id/textView29"
            android:background="@color/table_column_background"
            android:textColor="@color/table_column_text"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="20 mg per day for 10–14 days"
            android:id="@+id/textView30"></TextView>

        </TableRow>

        </TableLayout>

    </LinearLayout>
  </ScrollView>
</RelativeLayout>
